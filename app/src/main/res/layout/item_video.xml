<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/middle_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="120dp"
            android:layout_height="80dp"
            tools:backgroundTint="@drawable/corner"
            tools:ignore="ContentDescription"
            tools:src="@color/red" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nameVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/nine_dp"
        android:fontFamily="@font/fjalla_one"
        android:textColor="@color/black"
        android:textSize="@dimen/middle_size"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="HOW DISPLACEMENT INSTABILITY \n UNCERTAINTY AFFECT ..." />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/nine_dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/noto_sans"
        android:textColor="@color/black_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/cardView"
        app:layout_constraintTop_toBottomOf="@id/tv_nameVideo"
        tools:text="04:14" />


</androidx.constraintlayout.widget.ConstraintLayout>